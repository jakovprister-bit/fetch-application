@{
    ViewData["Title"] = "Search Engine Results";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px 0;
        }

        .search-container {
            background: white;
            border-radius: 12px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            padding: 30px;
            max-width: 1000px;
            margin: 0 auto;
        }

        .header-section {
            margin-bottom: 30px;
            border-bottom: 2px solid #e0e0e0;
            padding-bottom: 20px;
        }

        .header-section h1 {
            color: #333;
            font-size: 28px;
            font-weight: 600;
            margin: 0;
        }

        .header-section p {
            color: #666;
            font-size: 14px;
            margin: 5px 0 0 0;
        }

        .search-box {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
        }

        .search-box input {
            flex: 1;
            padding: 12px 16px;
            border: 2px solid #e0e0e0;
            border-radius: 6px;
            font-size: 15px;
            transition: border-color 0.3s;
        }

        .search-box input:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

        .btn-custom {
            padding: 12px 24px;
            font-weight: 600;
            border-radius: 6px;
            transition: all 0.3s;
        }

        .btn-search {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
        }

        .btn-search:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
            color: white;
        }

        .controls-row {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
            flex-wrap: wrap;
        }

        .filter-box {
            flex: 1;
            min-width: 250px;
        }

        .filter-box input {
            width: 100%;
            padding: 10px 14px;
            border: 2px solid #e0e0e0;
            border-radius: 6px;
            font-size: 14px;
            transition: border-color 0.3s;
        }

        .filter-box input:focus {
            outline: none;
            border-color: #667eea;
        }

        .last-search-info {
            background: #f9f9f9;
            border-left: 4px solid #667eea;
            padding: 10px 14px;
            border-radius: 4px;
            font-size: 13px;
            color: #666;
            margin-bottom: 15px;
            display: none;
        }

        .results-info {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
            padding-bottom: 10px;
            border-bottom: 2px solid #e0e0e0;
            font-size: 14px;
        }

        .results-info .badge {
            background: #667eea;
        }

        table {
            margin-top: 15px;
        }

        table thead {
            background: #f9f9f9;
        }

        table thead th {
            border-bottom: 2px solid #e0e0e0;
            color: #333;
            font-weight: 600;
            padding: 12px 15px;
        }

        table tbody td {
            padding: 15px;
            border-bottom: 1px solid #f0f0f0;
            color: #555;
            vertical-align: middle;
        }

        table tbody tr:hover {
            background: #f9f9f9;
        }

        .result-title {
            color: #667eea;
            text-decoration: none;
            font-weight: 600;
        }

        .result-title:hover {
            color: #764ba2;
            text-decoration: underline;
        }

        .result-url {
            color: #00a84f;
            font-size: 12px;
            word-break: break-all;
        }

        .result-snippet {
            color: #666;
            font-size: 13px;
        }

        .empty-state {
            text-align: center;
            padding: 40px;
            color: #999;
        }

        .no-results {
            text-align: center;
            padding: 30px;
            color: #999;
        }

        .loading {
            text-align: center;
            padding: 30px;
        }

        .spinner {
            border: 3px solid #f0f0f0;
            border-top: 3px solid #667eea;
            border-radius: 50%;
            width: 30px;
            height: 30px;
            animation: spin 1s linear infinite;
            margin: 0 auto 10px;
        }

        @@keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .alert-custom {
            border-radius: 6px;
            margin-bottom: 20px;
            border: none;
        }

       @@media (max-width: 768px) {
            .search-container {
                padding: 20px;
            }

            .search-box {
                flex-direction: column;
            }

            .controls-row {
                flex-direction: column;
            }

            .btn-custom {
                width: 100%;
            }

            table {
                font-size: 12px;
            }

            table thead th,
            table tbody td {
                padding: 8px;
            }
        }
    </style>
</head>
<body>
    <div class="search-container">

        <div class="header-section">
            <h1>🔍 Search Engine Results</h1>
            <p>Search the web and filter results in real-time</p>
        </div>

        <div id="errorMessage" class="alert alert-danger alert-custom" role="alert" style="display: none;"></div>
        <div id="successMessage" class="alert alert-success alert-custom" role="alert" style="display: none;"></div>

        <div class="search-box">
            <input type="text" id="searchInput" placeholder="Enter search term (e.g., 'C# .NET Core')..." />
            <button class="btn btn-search btn-custom" onclick="performSearch()">🔎 Search</button>
        </div>

        <div class="last-search-info" id="lastSearch">
            Last search: <strong id="lastSearchTerm"></strong> (<span id="lastSearchTime"></span>)
        </div>

        <div class="controls-row">
            <div class="filter-box">
                <input type="text" id="filterInput" placeholder="Filter results by keyword... (real-time)" oninput="applyFilter()" />
            </div>
            <button class="btn btn-outline-secondary btn-custom" onclick="sortResults()" title="Sort A-Z">
                📊 Sort <span id="sortIndicator">(ASC)</span>
            </button>
            <button class="btn btn-outline-danger btn-custom" onclick="clearFilter()" title="Clear Filter">
                ❌ Clear
            </button>
        </div>

        <div class="results-info">
            <div>
                <span id="resultsText">No results</span>
                <span class="badge ms-2" id="countBadge">0</span>
            </div>
            <small class="text-muted">
                Filtered: <strong id="filteredCount">0</strong> / <strong id="totalCount">0</strong>
            </small>
        </div>

        <div id="resultsContainer">
            <div class="empty-state">
                <p>🔎 No results yet. Start by searching for something!</p>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let allResults = [];
        let filteredResults = [];
        let sortOrder = 'ASC';
        let currentSearchTerm = '';

        async function performSearch() {
            const searchInput = document.getElementById('searchInput');
            const term = searchInput.value.trim();

            if (!term) {
                showError('Please enter a search term');
                return;
            }

            document.getElementById('resultsContainer').innerHTML = '<div class="loading"><div class="spinner"></div><p>Searching...</p></div>';
            clearMessages();

            try {
                const response = await fetch('/search', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ query: term })
                });

                if (!response.ok) {
                    const errorData = await response.json();
                    throw new Error(errorData.message || 'Search failed');
                }

                const data = await response.json();
                allResults = data.data || [];
                currentSearchTerm = term;
                sortOrder = 'ASC';
                updateLastSearch(term);
                filterResults('');
                renderResults();
                showSuccess(`Found ${allResults.length} results for "${term}"`);
            } catch (error) {
                hideLoading();               
                showError(`Error: ${error.message}`);
            }
        }

        function applyFilter() {
            const filterTerm = document.getElementById('filterInput').value.trim().toLowerCase();
            filterResults(filterTerm);
        }

        function filterResults(term) {
            if (!term) {
                filteredResults = [...allResults];
            } else {
                filteredResults = allResults.filter(result =>
                    result.title.toLowerCase().includes(term) ||
                    result.url.toLowerCase().includes(term) ||
                    result.snippet.toLowerCase().includes(term)
                );
            }
            renderResults();
        }

        function sortResults() {
            if (filteredResults.length === 0) {
                showError('No results to sort');
                return;
            }

            sortOrder = sortOrder === 'ASC' ? 'DESC' : 'ASC';

            filteredResults.sort((a, b) => {
                const comparison = a.title.localeCompare(b.title, 'en', { sensitivity: 'base' });
                return sortOrder === 'ASC' ? comparison : -comparison;
            });

            renderResults();
            showSuccess(`Sorted ${sortOrder === 'ASC' ? 'A-Z' : 'Z-A'}`);
        }

        function renderResults() {
            const container = document.getElementById('resultsContainer');
            const totalCount = allResults.length;
            const filteredCount = filteredResults.length;

            document.getElementById('totalCount').textContent = totalCount;
            document.getElementById('filteredCount').textContent = filteredCount;
            document.getElementById('countBadge').textContent = filteredCount;
            document.getElementById('resultsText').textContent = filteredCount > 0 ? `${filteredCount} results` : 'No results';
            document.getElementById('sortIndicator').textContent = filteredCount > 0 ? `(${sortOrder})` : '(ASC)';

            if (filteredCount === 0) {
                container.innerHTML = '<div class="no-results"><p>❌ No results match your filter.</p></div>';
                return;
            }

            let html = '<table class="table table-hover"><thead><tr><th style="width: 5%;">#</th><th style="width: 25%;">Title</th><th style="width: 20%;">URL</th><th style="width: 50%;">Snippet</th></tr></thead><tbody>';

            filteredResults.forEach((result, index) => {
                html += `<tr>
                    <td>${index + 1}</td>
                    <td><a href="${escapeHtml(result.url)}" target="_blank" class="result-title">${escapeHtml(result.title)}</a></td>
                    <td><a href="${escapeHtml(result.url)}" target="_blank" class="result-url">${escapeHtml(result.url)}</a></td>
                    <td><span class="result-snippet">${escapeHtml(result.snippet)}</span></td>
                </tr>`;
            });

            html += '</tbody></table>';
            container.innerHTML = html;
        }

        function clearFilter() {
            document.getElementById('filterInput').value = '';
            filterResults('');
            showSuccess('Filter cleared');
        }

        function updateLastSearch(term) {
            document.getElementById('lastSearchTerm').textContent = term;
            document.getElementById('lastSearchTime').textContent = new Date().toLocaleTimeString();
            document.getElementById('lastSearch').style.display = 'block';
        }

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        function showError(message) {
            const errorEl = document.getElementById('errorMessage');
            errorEl.textContent = message;
            errorEl.style.display = 'block';
            setTimeout(() => {
                errorEl.style.display = 'none';
            }, 10000);
        }

        function showSuccess(message) {
            const successEl = document.getElementById('successMessage');
            successEl.textContent = message;
            successEl.style.display = 'block';
            setTimeout(() => {
                successEl.style.display = 'none';
            }, 3000);
        }

        function hideLoading() {
            document.getElementsByClassName("loading")[0].remove();
        }

        function clearMessages() {
            document.getElementById('errorMessage').style.display = 'none';
            document.getElementById('successMessage').style.display = 'none';
        }

        document.addEventListener('DOMContentLoaded', () => {
            document.getElementById('searchInput').addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    performSearch();
                }
            });
        });
    </script>
</body>
</html>
